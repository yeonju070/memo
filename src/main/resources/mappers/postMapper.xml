<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.memo.post.dao.PostDAO">
	<insert id="insertPost">
		INSERT INTO `post`
		(
			`userId`
			,`subject`
			,`content`
			,`imagePath`
			,`createdAt`
			,`updatedAt`
		)
		VALUES
		(
			#{userId}
			,#{subject}
			,#{content}
			,#{imagePath}
			,NOW()
			,NOW()
		)
	</insert>
	<select id="selectPostListByUserId" parameterType="int" resultType="com.memo.post.model.Post">
		SELECT
			`id`
			,`userId`
			,`subject`
			,`content`
			,`imagePath`
			,`createdAt`
			,`updatedAt`
		FROM
			`post`
		WHERE
			`userId` = #{userId}
		ORDER BY `id` DESC
	</select>
	<select id="selectPostByPostIdAndUserId" parameterType="map" resultType="com.memo.post.model.Post">
		SELECT
			`id`
			,`userId`
			,`subject`
			,`content`
			,`imagePath`
			,`createdAt`
			,`updatedAt`
		FROM
			`post`
		WHERE
			`userId` = #{userId}
			AND
			`id` = #{postId}
	</select>
	<select id="selectPostByPostId" parameterType="int" resultType="com.memo.post.model.Post">
		SELECT
			`id`
			,`userId`
			,`subject`
			,`content`
			,`imagePath`
			,`createdAt`
			,`updatedAt`
		FROM
			`post`
		WHERE
			`id` = #{postId}
	</select>
	<update id="updatePost" parameterType="map">
		UPDATE `post`
		SET
			`subject` = #{subject}
			, `content` = #{content}
			, `updatedAt` = NOW()
			<!-- imagePath가 있을 때만 수정한다. -->
			<if test="imagePath != null">
			, `imagePath` = #{imagePath}
			</if>
		WHERE
			`id` = #{postId}
	</update>
</mapper>